# -*- Mode:Doxygen -*-

QUIET                = YES
PROJECT_NAME         = @CMAKE_PROJECT_NAME@
OUTPUT_DIRECTORY     = @CMAKE_BINARY_DIR@/doc/dev

STRIP_FROM_PATH     += @CMAKE_SOURCE_DIR@/inc
STRIP_FROM_PATH     += @CMAKE_SOURCE_DIR@/src

STRIP_FROM_INC_PATH += @CMAKE_SOURCE_DIR@/inc
# STRIP_FROM_INC_PATH += @INCLUDE_DIRECTORIES@

INPUT               += @CMAKE_SOURCE_DIR@/inc
INPUT               += @CMAKE_SOURCE_DIR@/src
EXCLUDE             += @CMAKE_SOURCE_DIR@/src/app
EXCLUDE_PATTERNS    += */test/*
EXCLUDE_SYMBOLS     += boost::*
EXCLUDE_SYMBOLS     += std::*
RECURSIVE            = YES

TAB_SIZE             = 2
BUILTIN_STL_SUPPORT  = YES
EXTRACT_ALL          = YES
EXTRACT_PRIVATE      = YES
EXTRACT_PACKAGE      = YES
EXTRACT_STATIC       = YES
INTERNAL_DOCS        = YES

SOURCE_BROWSER       = YES

HAVE_DOT             = @DOXYGEN_DOT_FOUND@
DOT_GRAPH_MAX_NODES  = 150
MAX_DOT_GRAPH_DEPTH  = 0
DOT_TRANSPARENT      = YES
DOT_MULTI_TARGETS    = YES
DOT_FONTNAME         = DejaVu Sans Mono
DOT_FONTSIZE         = 12
#DOT_IMAGE_FORMAT     = svg
DOT_PATH             = @DOXYGEN_DOT_PATH@
# MSCGEN_PATH

TAGFILES            += "@CMAKE_SOURCE_DIR@/doc/cppreference-doxygen-web.tag.xml=http://en.cppreference.com/w/"
